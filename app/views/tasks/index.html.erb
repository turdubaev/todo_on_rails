<p style="color: green"><%= notice %></p>

<% if params[:is_done] == "true" %>
  <h1>Completed tasks</h1> <br/>

<% elsif params[:is_done] == "false" %>
  <h1>Pending tasks</h1> <br/>

<% else %>
  <h1>All tasks</h1> <br/>

<% end %>

<table class="table table-striped table-bordered">  
  <thead class="table-dark">
    <tr>
      <th>Description</th>
      <th>Is Done</th>
      <th>Updating</th>
      <th>Deleting</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.is_done ? 'Yes' : 'No' %></td>
        <td><%= link_to "Edit", edit_task_path(task), class:"btn btn-warning" %></td>
        <td><%= button_to "Delete", task, method: :delete, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New task", new_task_path, class:"btn btn-success" %>