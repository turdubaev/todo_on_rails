<div id="<%= dom_id task %>">
  <div class="card" style="margin-bottom: 20px">
  <div class="card-header">
    Description:
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= task.description %></p>
      <footer class="blockquote-footer">Is done: <cite title="Source Title"><%= task.is_done %></cite></footer>
    </blockquote>
  </div>
</div>
</div>
